                  <Button layoutX="367.0" layoutY="627.0" mnemonicParsing="false" onMouseClicked="#printContract" text="print" />
                  <Button layoutX="302.0" layoutY="627.0" mnemonicParsing="false" onMouseClicked="#createContract" text="create" />
